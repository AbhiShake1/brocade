// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  email     String     @unique
  password  String
  carts     Cart[]
  giftCards GiftCard[]
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String
  category    String
  carts       Cart[]
}

model Cart {
  id        String  @id @default(cuid())
  quantity  Int
  userId    String
  productId String
  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([userId, productId])
  @@index([productId])
}

model GiftCard {
  id     String @id @default(cuid())
  code   String
  amount Float
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
